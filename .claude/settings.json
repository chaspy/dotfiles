{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Search",
      "WebSearch",
      "WebFetch"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(dd *)",
      "Bash(mkfs *)",
      "Bash(chown * /etc/*)",
      "Bash(chmod 7?? /etc/*)",
      "Bash(shutdown *)",
      "Bash(reboot *)",
      "Bash(halt *)",
      "Bash(poweroff *)",
      "Bash(curl * | bash *)",
      "Bash(wget * | bash *)"
    ]
  },
  "env": {
    "TZ": "Asia/Tokyo",
    "MAX_THINKING_TOKENS": "31999"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {"tools": ["Edit", "MultiEdit", "Write"]},
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ファイル編集完了'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": {"tools": ["Bash"]},
        "hooks": [
          {
            "type": "command", 
            "command": "echo 'コマンド実行前チェック'"
          }
        ]
      }
    ]
  }
}