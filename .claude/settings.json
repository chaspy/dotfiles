{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Search",
      "WebSearch",
      "WebFetch"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(dd *)",
      "Bash(mkfs *)",
      "Bash(chown * /etc/*)",
      "Bash(chmod 7?? /etc/*)",
      "Bash(shutdown *)",
      "Bash(reboot *)",
      "Bash(halt *)",
      "Bash(poweroff *)",
      "Bash(curl * | bash *)",
      "Bash(wget * | bash *)"
    ]
  },
  "env": {
    "TZ": "Asia/Tokyo",
    "MAX_THINKING_TOKENS": "31999"
  },
  "aliases": {
    "pr": "/pr-create",
    "c": "/compact",
    "t": "/test",
    "d": "/debug",
    "e": "/explain"
  },
  "hooks": {
    "pre-commit": {
      "command": "echo 'コミット前チェック実行中...'",
      "description": "コミット前の通知"
    },
    "post-file-edit": {
      "command": "echo 'ファイル編集完了: {{file_path}}'",
      "description": "ファイル編集後の通知"
    }
  }
}