{
  "statusLine": {
    "enabled": true,
    "type": "command",
    "command": "BR=$(git rev-parse --abbrev-ref HEAD 2>/dev/null || echo '-'); USAGE=$(ccusage blocks --statusline --once 2>/dev/null | awk '{print $1}' | grep -o '[0-9]\\+%' || echo '?%'); RESET=$(ccusage blocks --statusline --once 2>/dev/null | grep -oE 'reset: [0-9]{2}:[0-9]{2}' | awk '{print $2}' || echo '??:??'); printf '📁 %s 🌿 %s 🤖 %s ⏳%s reset@%s' \"${PWD##*/}\" \"${BR}\" \"${CLAUDE_MODEL:-opus-4.1}\" \"$USAGE\" \"$RESET\""
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Search",
      "WebSearch",
      "WebFetch"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(dd *)",
      "Bash(mkfs *)",
      "Bash(chown * /etc/*)",
      "Bash(chmod 7?? /etc/*)",
      "Bash(shutdown *)",
      "Bash(reboot *)",
      "Bash(halt *)",
      "Bash(poweroff *)",
      "Bash(curl * | bash *)",
      "Bash(wget * | bash *)"
    ]
  },
  "env": {
    "TZ": "Asia/Tokyo",
    "MAX_THINKING_TOKENS": "31999"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ファイル編集完了'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command", 
            "command": "echo 'コマンド実行前チェック'"
          }
        ]
      }
    ]
  }
}
